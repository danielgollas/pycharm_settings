<application>
  <component name="XDebuggerSettings">
    <data-views />
    <general />
    <debuggers>
      <debugger id="javascript">
        <configuration>
          <custom-object-presentation />
          <stepping-filters>
            <stepping-filter url-pattern="mobileweb/app/bower_components/*" />
            <stepping-filter url-pattern="mobileweb/node_modules/*" />
          </stepping-filters>
        </configuration>
      </debugger>
      <debugger id="python">
        <configuration>
          <option name="watchReturnValues" value="true" />
        </configuration>
      </debugger>
    </debuggers>
  </component>
</application>