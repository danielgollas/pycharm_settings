<application>
  <component name="XDebuggerSettings">
    <data-views />
    <general>
      <evaluation-dialog-mode>CODE_FRAGMENT</evaluation-dialog-mode>
    </general>
    <debuggers>
      <debugger id="javascript">
        <configuration>
          <custom-object-presentation />
          <stepping-filters>
            <stepping-filter url-pattern="node_modules/*" />
            <stepping-filter url-pattern="app/bower_components/*" />
          </stepping-filters>
        </configuration>
      </debugger>
      <debugger id="python">
        <configuration>
          <option name="watchReturnValues" value="true" />
        </configuration>
      </debugger>
    </debuggers>
  </component>
</application>